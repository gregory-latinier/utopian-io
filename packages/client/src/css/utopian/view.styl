@import '~variables'
.post-view
  font-size 14px
  fontFamily: 'Raleway'
  h1
    font-size 28px
    font-weight 600
    margin 10px 0
  h2
    font-size 24px
    font-weight 500
    margin 8px 0
  h3
    font-size 20px
    font-weight 400
    margin 6px 0
  h4
    font-size 18px
    font-weight 300
    margin 4px 0
  img
    max-width 100%

  a.mention-link
    color $primary!important
    text-decoration-line none!important
    &:hover
      cursor pointer
